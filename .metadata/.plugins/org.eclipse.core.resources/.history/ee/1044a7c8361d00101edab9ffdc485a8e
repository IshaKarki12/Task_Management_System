    <table>
        <tr>
            <th>ID</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
        <%
            if (categoryList != null && !categoryList.isEmpty()) {
                for (TaskCategory c : categoryList) {
        %>
        <tr>
            <td><%= c.getCategoryID() %></td>
            <td><%= c.getCategoryName() %></td>
            <td>
                <a href="CategoryServlet?action=editForm&categoryId=<%= c.getCategoryID() %>" class="btn edit">Edit</a>
                <a href="CategoryServlet?action=delete&categoryId=<%= c.getCategoryID() %>" class="btn delete" onclick="return confirm('Are you sure?');">Delete</a>
            </td>
        </tr>
        <%      }
            } else {
        %>
        <tr><td colspan="3">No categories available.</td></tr>
