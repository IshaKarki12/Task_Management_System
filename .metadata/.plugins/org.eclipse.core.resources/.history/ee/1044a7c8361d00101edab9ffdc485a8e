<body>
    <h2><%= category != null ? "Edit Category" : "Add New Category" %></h2>

    <form action="CategoryServlet" method="post">
        <input type="hidden" name="action" value="<%= category != null ? "update" : "add" %>">
        <input type="hidden" name="categoryId" value="<%= category != null ? category.getCategoryID() : "" %>">
        <input type="text" name="categoryName" placeholder="Enter category name" required value="<%= category != null ? category.getCategoryName() : "" %>">
