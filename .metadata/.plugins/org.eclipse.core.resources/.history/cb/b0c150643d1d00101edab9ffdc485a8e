    <script>
        // Example function to load tasks based on selected category
        function loadTasksByCategory() {
            const category = document.getElementById('categorySelect').value;
            
            // Placeholder for task data - replace with actual AJAX or backend data later
            const tasks = {
                work: [
                    {name: 'Work Task 1', description: 'Complete project report', status: 'Pending', dueDate: '2025-04-22'},
                    {name: 'Work Task 2', description: 'Attend meeting', status: 'In Progress', dueDate: '2025-04-23'}
                ],
                study: [
                    {name: 'Study Task 1', description: 'Study for exam', status: 'Completed', dueDate: '2025-04-24'},
                    {name: 'Study Task 2', description: 'Read chapter 5', status: 'Pending', dueDate: '2025-04-25'}
                ],
                personal: [
                    {name: 'Personal Task 1', description: 'Buy groceries', status: 'Pending', dueDate: '2025-04-21'},
                    {name: 'Personal Task 2', description: 'Clean the house', status: 'In Progress', dueDate: '2025-04-23'}
                ]
            };

            // Clear existing tasks in table
            const tableBody = document.getElementById('taskTable').getElementsByTagName('tbody')[0];
            tableBody.innerHTML = '';

            // Filter tasks based on category
            let filteredTasks = [];
            if (category === 'all') {
                filteredTasks = [...tasks.work, ...tasks.study, ...tasks.personal];
            } else {
                filteredTasks = tasks[category] || [];
            }

            // Add filtered tasks to the table
            filteredTasks.forEach(task => {
                const row = tableBody.insertRow();
                row.innerHTML = `
                    <td>${task.name}</td>
                    <td>${task.description}</td>
                    <td>${task.status}</td>
                    <td>${task.dueDate}</td>
                `;
            });
        }

        // Load tasks on page load (optional)
        window.onload = loadTasksByCategory;
    </script>
