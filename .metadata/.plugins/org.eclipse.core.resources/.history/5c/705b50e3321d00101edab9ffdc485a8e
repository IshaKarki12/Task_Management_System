  <!-- ─── SIDEBAR ───────────────────────────────────────────── -->
  <aside>
    <!-- Profile Badge + Name -->
    <div class="sidebar-profile">
      <%
        // Compute initials from currentUser's name
        model.User u = (model.User) session.getAttribute("currentUser");
        String initials = "AD";
        if (u != null) {
          String[] parts = u.getUserName().trim().split("\\s+");
          if (parts.length >= 2) {
            initials = parts[0].substring(0,1).toUpperCase() + parts[1].substring(0,1).toUpperCase();
          } else {
            initials = parts[0].substring(0,1).toUpperCase();
          }
        }
      %>
      <div class="initials"><%= initials %></div>
      <div class="name"><%= u != null ? u.getUserName() : "Admin" %></div>
    </div>

    <!-- Navigation Links -->
    <ul class="nav-links">
