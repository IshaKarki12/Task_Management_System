<script>
    function loadTasksByCategory() {
        const category = document.querySelector('.category-select').value;
        const tasks = {
            work: [
                { name: "Complete report", description: "Monthly work report", status: "In Progress", due: "2025-04-25" }
            ],
            study: [
                { name: "Study Math", description: "Calculus exam prep", status: "Pending", due: "2025-04-22" }
            ],
            personal: [
                { name: "Buy groceries", description: "Milk, eggs, veggies", status: "Completed", due: "2025-04-20" }
            ]
        };

        const tbody = document.querySelector("#taskTable tbody");
        tbody.innerHTML = "";

        let selectedTasks = [];
        if (category === "all") {
            selectedTasks = [].concat(...Object.values(tasks));
        } else {
            selectedTasks = tasks[category] || [];
        }

        selectedTasks.forEach(task => {
            const row = `<tr>
                <td>${task.name}</td>
                <td>${task.description}</td>
                <td>${task.status}</td>
                <td>${task.due}</td>
            </tr>`;
            tbody.innerHTML += row;
        });
    }

    window.onload = loadTasksByCategory;
</script>
