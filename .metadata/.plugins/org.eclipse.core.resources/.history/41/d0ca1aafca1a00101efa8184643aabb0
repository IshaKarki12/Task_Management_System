package controller;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import java.io.IOException;
import dao.UserDAO;

@WebServlet("/LoginServlet")
public class LoginServlet extends HttpServlet {
    private static final long serialVersionUID = 1L;

    protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        // Check if user is already logged in
        if (request.getSession().getAttribute("user") != null) {
            response.sendRedirect("home.jsp");  // Or redirect to the desired page if logged in
        } else {
            request.getRequestDispatcher("/login.jsp").forward(request, response);  // Forward to login page if not logged in
        }
    }

    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        String email = request.getParameter("email");
        String password = request.getParameter("password");

        // Validate login
        UserDAO userDAO = new UserDAO();
        User user = userDAO.validateLogin(email, password);

        if (user != null) {
            // Store user info in session if login is successful
            request.getSession().setAttribute("user", user);
            response.sendRedirect("home.jsp");  // Redirect to home or desired page after login
        } else {
            request.setAttribute("error", "Invalid credentials. Please try again.");
            request.getRequestDispatcher("/login.jsp").forward(request, response);  // Show error and redirect to login
        }
    }
}
}
